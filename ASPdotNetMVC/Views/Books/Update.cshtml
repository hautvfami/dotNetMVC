@model ASPdotNetMVC.Models.BOOK
@{
    ViewBag.Title = "Cập nhật";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Dist/ckfinder/ckfinder.js"></script>
<script>

</script>
<div class="col-md-8">
    <div class="card">
        <div class="card-header card-header-icon" data-background-color="green">
            <i class="material-icons">people</i>
        </div>
        <div class="card-content">
            <h4 class="card-title">Sửa thông tin sách</h4>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-md-5 pr-1">
                        <div class="form-group">
                            <label>Mã sách</label>
                            @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @disabled = "" })
                            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3 px-1">
                        <div class="form-group">
                            <label>Có trong kho</label>
                            @Html.TextBoxFor(model => model.IN_LIB, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IN_LIB, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4 pl-1">
                        <div class="form-group">
                            <label for="txtImage">Đã cho mượn</label>
                            @*<img source=@model.AVATAR==null?"/Dist/images/user.png" : "data:image/png;base64," + Convert.ToBase64String(model.AVATAR);/>*@
                            @Html.TextBoxFor(model => model.OUT_LIB, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.OUT_LIB, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 pr-1">
                        <div class="form-group">
                            <label>Tên sách</label>
                            @Html.TextBoxFor(model => model.NAME, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4 pl-1">
                        <div class="form-group">
                            <label>Tác giả</label>
                            @Html.TextBoxFor(model => model.AUTHOR, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AUTHOR, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Nội dung</label>
                            @Html.TextAreaFor(model => model.CONTENT, new { @class = "form-control", @rows = "6", @cols = "80" })
                            @Html.ValidationMessageFor(model => model.CONTENT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 pl-1 col-md-offset-4">
                        <div class="form-group">
                            <label>Nhà xuất bản</label>
                            @Html.TextBoxFor(model => model.PUBLISHER, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PUBLISHER, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4 pl-1">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Giá sách</label>
                            @Html.TextBoxFor(model => model.COST, new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.COST, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success btn-fill pull-right">Đồng ý</button>
                <div class="clearfix"></div>
            }
        </div>
    </div>
</div>
<div class="col-md-4">
    <div class="card">
        <div class="card-content">
            <h4 class="card-title">Quản lý người dùng</h4>
            <p>Avatar in here</p>
        </div>
    </div>
</div>